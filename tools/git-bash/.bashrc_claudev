# ClaudeV 開發環境 Git Bash 配置
# 使用方法: source /d/claudeV/tools/git-bash/.bashrc_claudev

# 顏色設定
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced

# 專案路徑別名
export CLAUDEV_ROOT="/d/claudeV"
export NATURETOUR_PATH="$CLAUDEV_ROOT/projects/naturetour-website"
export TRAVEL_GEN_PATH="$CLAUDEV_ROOT/projects/travel-content-generator"
export WULITOU_PATH="$CLAUDEV_ROOT/projects/wulitou-writer"

# 快速切換目錄
alias cdcv='cd $CLAUDEV_ROOT && echo "📁 ClaudeV 根目錄"'
alias cdn='cd $NATURETOUR_PATH && echo "🌐 自然國際旅行社專案"'
alias cdtc='cd $TRAVEL_GEN_PATH && echo "📝 旅遊內容生成器"'
alias cdww='cd $WULITOU_PATH && echo "✍️ 無厘頭寫作工具"'

# Git 快速指令
alias gs='git status'
alias ga='git add .'
alias gc='git commit -m'
alias gp='git push origin'
alias gl='git pull origin'
alias gd='git diff'
alias gb='git branch'
alias gco='git checkout'

# 專案管理指令
alias pstatus='echo "=== 📊 ClaudeV 專案狀態 ===" && cd $CLAUDEV_ROOT && git status && echo -e "\n=== 📁 專案結構 ===" && ls -la projects/'
alias pclean='echo "🧹 清理專案..." && find $CLAUDEV_ROOT -name "node_modules" -type d -exec rm -rf {} + 2>/dev/null && find $CLAUDEV_ROOT -name "__pycache__" -type d -exec rm -rf {} + 2>/dev/null && echo "✅ 清理完成"'
alias pbackup='echo "💾 建立備份..." && tar -czf "/d/claudeV_backup_$(date +%Y%m%d_%H%M%S).tar.gz" --exclude="node_modules" --exclude="__pycache__" --exclude="venv" $CLAUDEV_ROOT && echo "✅ 備份完成"'

# 開發環境啟動
alias startdev='echo "🚀 啟動開發環境..." && code $CLAUDEV_ROOT/tools/vscode-config/workspace.code-workspace'
alias startweb='cdn && echo "🌐 啟動網站開發..." && npm run dev'
alias startpython='cdtc && echo "🐍 啟動 Python 虛擬環境..." && source venv/bin/activate 2>/dev/null || echo "❌ 請先建立虛擬環境: python -m venv venv"'

# Claude AI 相關
alias claude-help='echo -e "🤖 Claude AI 使用指南:\n• VS Code: Ctrl+Shift+P > Claude\n• 程式碼審查: Claude: Review Code\n• 文檔生成: Claude: Generate Documentation\n• 配置檔案: $CLAUDEV_ROOT/.claude/settings.local.json"'

# GitHub 認證狀態檢查
alias auth-status='echo "🔐 GitHub 認證狀態:" && git config credential.helper && echo "✅ Personal Access Token 已配置" && echo "✅ 推送時無需手動輸入密碼"'

# 系統資訊
alias sysinfo='echo -e "💻 系統資訊:\n• 專案根目錄: $CLAUDEV_ROOT\n• Git 版本: $(git --version)\n• Node.js 版本: $(node --version 2>/dev/null || echo "未安裝")\n• Python 版本: $(python --version 2>/dev/null || echo "未安裝")"'

# 自訂 PS1 提示符
export PS1='\[\033[01;32m\]ClaudeV\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '

# 歡迎訊息
echo -e "\n🚀 \033[1;32mClaudeV 開發環境\033[0m 已載入！"
echo -e "📁 根目錄: $CLAUDEV_ROOT"
echo -e "🛠️  快速指令: \033[1;36mcdcv\033[0m, \033[1;36mcdn\033[0m, \033[1;36mcdtc\033[0m, \033[1;36mcdww\033[0m"
echo -e "📊 專案狀態: \033[1;36mpstatus\033[0m"
echo -e "🚀 啟動開發: \033[1;36mstartdev\033[0m"
echo -e "🤖 Claude 說明: \033[1;36mclaude-help\033[0m"
echo -e "ℹ️  系統資訊: \033[1;36msysinfo\033[0m\n"

# 自動切換到 ClaudeV 根目錄
cd $CLAUDEV_ROOT